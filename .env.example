# Example environment variables for ChatFlow AI
# Copy this file to .env and fill in your values

# ======================
# Application
# ======================
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
PORT=3000
API_PORT=3001

# ======================
# Database
# ======================
# PostgreSQL (Primary database for relational data)
DATABASE_URL=postgresql://chatflow:password@localhost:5432/chatflow

# MongoDB (Analytics and logs)
MONGODB_URL=mongodb://localhost:27017/chatflow

# Redis (Cache and queues)
REDIS_URL=redis://localhost:6379

# ======================
# Authentication
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ======================
# WhatsApp Integration
# ======================
# Evolution API (Open Source WhatsApp API)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key

# Official WhatsApp Business API (Optional)
WHATSAPP_BUSINESS_ACCOUNT_ID=your-account-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ======================
# AI Services
# ======================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key
GOOGLE_AI_MODEL=gemini-pro

# ======================
# Email Services
# ======================
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@chatflow.ai
SENDGRID_FROM_NAME=ChatFlow AI

# SMTP (Alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ======================
# SMS Services
# ======================
# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ======================
# File Storage
# ======================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=chatflow-media
AWS_REGION=us-east-1

# Cloudflare R2 (Alternative to S3)
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=chatflow-media

# ======================
# Payment Processing
# ======================
# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ======================
# Analytics & Monitoring
# ======================
# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# PostHog (Product analytics)
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ======================
# External Integrations
# ======================
# Shopify
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret

# WooCommerce
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=your-consumer-key
WOOCOMMERCE_CONSUMER_SECRET=your-consumer-secret

# Zapier
ZAPIER_CLIENT_ID=your-zapier-client-id
ZAPIER_CLIENT_SECRET=your-zapier-client-secret

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Security
# ======================
# CORS
CORS_ORIGIN=http://localhost:3000

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# ======================
# Feature Flags
# ======================
ENABLE_AI_FEATURES=true
ENABLE_EMAIL_CAMPAIGNS=true
ENABLE_SMS_CAMPAIGNS=false
ENABLE_VOICE_CALLS=false
ENABLE_ANALYTICS=true
ENABLE_WHITE_LABEL=true

# ======================
# Development
# ======================
# Logging
LOG_LEVEL=debug

# Debug
DEBUG=chatflow:*

# ======================
# Production Only
# ======================
# SSL/TLS
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# CDN
CDN_URL=https://cdn.chatflow.ai

# Session
SESSION_SECRET=your-session-secret
